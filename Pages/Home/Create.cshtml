@page
@model CarBooking.Pages.Home.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>CarBookingz</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CarBookingz.StartDate" class="control-label"></label>
                <input id="start" asp-for="CarBookingz.StartDate" class="form-control" />
                <span asp-validation-for="CarBookingz.StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarBookingz.EndDate" class="control-label"></label>
                <input id="stop" asp-for="CarBookingz.EndDate" class="form-control" />
                <span asp-validation-for="CarBookingz.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">

                <select class="form-control-sm mr-sm-3" asp-for="CarBookingz.CarId" asp-items="Model.Cars">
                </select>
            </div>
            <input type="hidden" asp-for="CarBookingz.ApplicationUserId" value="@Model.ApplicationUser.Id" />
            <input type="hidden" asp-for="CarBookingz.Status" value="0" />

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
